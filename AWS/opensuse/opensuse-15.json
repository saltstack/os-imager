{
  "_comment": "Build with `packer build opensuse.json`",
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{ user `aws_region` }}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "{{ user `ami_filter` }}",
          "root-device-type": "ebs"
        },
        "owners": [
          "883373499178",
          "540082622920",
          "989543020150"
        ],
        "most_recent": true
      },
      "instance_type": "t2.large",
      "enable_t2_unlimited": true,
      "ssh_username": "ec2-user",
      "ami_name": "{{ user `ami_name` }}/{{ user `salt_branch`}}/{{timestamp}}",
      "ami_users": [
        "883373499178",
        "540082622920"
      ],
      "ami_description": "CI Image of {{ user `os_name` }} {{ user `os_version` }} for salt@{{ user `salt_branch` }}",
      "tags": {
        "Name":"CI // {{ user `os_name` }} {{ user `os_version`}} // salt@{{ user `salt_branch`}}",
        "OS-Name": "{{ user `os_name` }}",
        "OS-Version": "{{ user `os_version` }}",
        "Build-Date": "{{ isotime }}",
        "Build-Type": "CI",
        "created-by": "packer",
        "Owner": "SRE",
        "Salt-Branch": "{{ user `salt_branch` }}",
        "Bootstrapped-Salt-Version": "{{ user `bootstrap_version` }}",
        "Python-2": true,
        "Python-3": true
      },
      "run_tags": {
        "Name": "Packer {{ user `os_name` }} {{ user `os_version` }} Builder",
        "created-by": "packer",
        "Owner": "SRE"
      },
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 20,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell-local",
      "script": "AWS/files/prep-linux.sh",
      "environment_vars": [
        "SALT_BRANCH={{ user `salt_branch` }}",
        "PY_VERSION=3"
      ]
    },
    {
      "type":"file",
      "source": ".tmp/conf/minion",
      "destination": "/tmp/gitfs.conf",
      "direction": "upload"
    },
    {
      "type": "shell",
      "inline": [
         "sudo mkdir -p /etc/salt/minion.d",
         "sudo mv /tmp/gitfs.conf /etc/salt/minion.d/"
       ]
    },
    {
      "type": "salt-masterless",
      "bootstrap_args": "-X -p python2-pip -p python2-setuptools git v{{ user `bootstrap_version` }}",
      "local_state_tree": ".tmp/states",
      "local_pillar_roots": ".tmp/pillar",
      "custom_state": "gitpython"
    },
    {
      "type":"file",
      "source": ".tmp/pillar",
      "destination": "/tmp/pillar",
      "direction": "upload"
    },
    {
      "type": "shell",
      "inline": [
        "sudo rm -rf /srv/pillar /srv/salt/*",
        "sudo mv /tmp/pillar /srv",
        "sudo salt-call --local  state.sls git.minimal --retcode-passthrough -l debug",
        "sudo rm -rf /srv/pillar/* /srv/salt/* /tmp/salt /tmp/pillar"
       ]
    },
    {
      "type": "shell-local",
      "script": "AWS/files/prep-linux.sh",
      "environment_vars": [
        "SALT_BRANCH={{ user `salt_branch` }}",
        "PY_VERSION=2"
      ]
    },
    {
      "type":"file",
      "source": ".tmp/pillar",
      "destination": "/tmp/pillar",
      "direction": "upload"
    },
    {
      "type": "shell",
      "inline": [
        "sudo rm -rf /srv/pillar /srv/salt/*",
        "sudo mv /tmp/pillar /srv",
        "sudo salt-call --local  state.sls git.minimal --retcode-passthrough -l debug",
        "sudo rm -rf /srv/pillar /srv/salt /tmp/salt /tmp/pillar"
       ]
    }
  ]
}
