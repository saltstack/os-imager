{
  "_comment": "Build with `packer build fedora.json`",
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'salt' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/cleanup.sh"
    }
  ],
  "builders": [
    {
      "accelerator": "{{ user `accelerator` }}",
      "boot_command": [
        "<up><wait><tab> biosdevname=0 text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/{{ user `kickstart` }}<enter>"
      ],
      "iso_urls": [
        "{{ user `iso_url` }}"
      ],
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "disk_size": "{{ user `disk_size` }}",
      "headless": "{{ user `headless` }}",
      "http_directory": "{{ user `http_directory` }}",
      "name": "{{ user `name` }}",
      "output_directory": "output-{{ user `vm_name` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_wait_timeout": "10000s",
      "type": "qemu",
      "format": "qcow2",
      "vm_name": "{{ user `vm_name` }}",
      "vnc_bind_address": "0.0.0.0",
      "qemuargs": [
        [
          "-m",
          "2048m"
        ],
        [
          "--smp",
          "cores=2,threads=1,sockets=1"
        ],
        [
          "--enable-kvm"
        ]
      ]
    }
  ],
  "variables": {
    "accelerator": "kvm",
    "headless": "True",
    "cleanup_build_tools": "false",
    "desktop": "false",
    "disk_size": "10240",
    "http_directory": "kickstart",
    "name": "fedora.qcow2",
    "ssh_password": "salt",
    "ssh_username": "salt",
    "update": "true"
  }
}
